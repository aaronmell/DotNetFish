<Window x:Class="MapBuilder.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        Title="Map Builder" Height="137" Width="248">
    <Grid>
        <Button 
			Height="45"
			HorizontalAlignment="Left"
			Margin="12,27,0,0"
			Name="uxLoadLevel"
			VerticalAlignment="Top"
			Width="81"
			Command="{Binding Path=OpenExistingMap}">
            <TextBlock TextWrapping="Wrap"
                   TextAlignment="Center">
            Load Existing Level
            </TextBlock>
        </Button>
        <Button
			Height="45"
			HorizontalAlignment="Left"
			Margin="139,27,0,0"
			Name="uxNewLevel"
			VerticalAlignment="Top"
			Width="75"
			Command="{Binding Path=OpenNewMap}">
            <TextBlock TextWrapping="Wrap"
                   TextAlignment="Center">
            Generate New Level
            </TextBlock>
        </Button>
    </Grid>
</Window>
